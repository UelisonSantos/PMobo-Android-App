<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListeningNomeProjTarefa">

    <TextView
        android:id="@+id/textViewCriacaoDeTarefa"
        android:layout_width="75dp"
        android:layout_height="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Criação de Tarefa"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fase3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fase3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="168dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/fase1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pmobologo"
        android:layout_width="107dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/pmobo_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Fale o nome do projeto"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="44dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:progress="33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="69dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:background="@null"
        android:onClick="onSpeechButtonClicked"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.681"
        app:srcCompat="@drawable/mic_logo" />

    <TextView
        android:id="@+id/textViewProjeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Projeto:"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/fase3"
        app:layout_constraintTop_toBottomOf="@+id/textViewCriacaoDeTarefa"
        tools:text="Projeto:" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Nome:"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/fase3"
        app:layout_constraintTop_toBottomOf="@+id/textViewProjeto"
        tools:text="Nome:" />

</android.support.constraint.ConstraintLayout>